<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#605f5f"
    android:orientation="horizontal"
    tools:context=".StatisticsActivity" >

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:weightSum="3" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" >

            <RelativeLayout>

                <Button
                    android:id="@+id/newGame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/round_btn"
                    android:text="@string/stats_newGame" />

                <ImageButton
                    android:id="@+id/save"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/newGame"
                    android:contentDescription="@string/save"
                    android:background="#605f5f"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/save" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" >

            <RelativeLayout>

                <Chronometer
                    android:id="@+id/timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/stats_timer"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/pause"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timer"
                    android:background="#FFFFFF"
                    android:src="@drawable/pause"
                    android:text="@string/stats_pause" />
                <ImageButton
                    android:id="@+id/play"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timer"
                    android:background="#FFFFFF"
                    android:src="@drawable/play"
                    android:text="@string/stats_play"
                    android:visibility="invisible" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" >

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/posession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="73dp"
                    android:layout_marginRight="73dp"
                    android:text="@string/stats_posession" />

                <Button
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/posession"
                    android:background="@drawable/round_btn2"
                    android:text="@string/stats_home" />

                <Button
                    android:id="@+id/away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/posession"
                    android:background="@drawable/round_btn2"
                    android:text="@string/stats_away" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" >

            <RelativeLayout>

                <TextView
                    android:id="@+id/shots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="85dp"
                    android:layout_marginRight="85dp"
                    android:text="@string/stats_shots" />

                <ImageButton
                    android:id="@+id/homeShotsMinus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/shots"
                    android:background="#FFFFFF"
                    android:src="@drawable/minus"
                    android:text="@string/stats_homeShotsMinus" />

                <TextView
                    android:id="@+id/numHomeShots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/homeShotsMinus"
                    android:inputType="number"
                    android:text="@string/stats_numHomeShots" />

                <ImageButton
                    android:id="@+id/homeShotsPlus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/numHomeShots"
                    android:background="#FFFFFF"
                    android:src="@drawable/plus"
                    android:text="@string/stats_homeShotsPlus" />

                <ImageButton
                    android:id="@+id/awayShotsMinus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/numAwayShots"
                    android:background="#FFFFFF"
                    android:src="@drawable/minus"
                    android:text="@string/stats_awayShotsMinus" />

                <TextView
                    android:id="@+id/numAwayShots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/awayShotsPlus"
                    android:text="@string/stats_numAwayShots" />

                <ImageButton
                    android:id="@+id/awayShotsPlus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/shots"
                    android:background="#FFFFFF"
                    android:src="@drawable/plus"
                    android:text="@string/stats_awayShotsPlus" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" >

            <RelativeLayout>

                <TextView
                    android:id="@+id/goals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="85dp"
                    android:layout_marginRight="85dp"
                    android:text="@string/stats_goals" />

                <ImageButton
                    android:id="@+id/homeGoalsMinus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/goals"
                    android:background="#FFFFFF"
                    android:src="@drawable/minus"
                    android:text="@string/stats_homeGoalsMinus" />

                <TextView
                    android:id="@+id/numHomeGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/homeGoalsMinus"
                    android:text="@string/stats_numHomeGoals" />

                <ImageButton
                    android:id="@+id/homeGoalsPlus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/numHomeGoals"
                    android:background="#FFFFFF"
                    android:src="@drawable/plus"
                    android:text="@string/stats_homeGoalsPlus" />

                <ImageButton
                    android:id="@+id/awayGoalsMinus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/numAwayGoals"
                    android:background="#FFFFFF"
                    android:src="@drawable/minus"
                    android:text="@string/stats_awayGoalsMinus" />

                <TextView
                    android:id="@+id/numAwayGoals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/awayGoalsPlus"
                    android:text="@string/stats_numAwayGoals" />

                <ImageButton
                    android:id="@+id/awayGoalsPlus"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/goals"
                    android:background="#FFFFFF"
                    android:src="@drawable/plus"
                    android:text="@string/stats_awayGoalsPlus" />
            </RelativeLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_weight="0.3"
            android:gravity="center_horizontal" >

            <RelativeLayout>

                <TextView
                    android:id="@+id/penalties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="76dp"
                    android:layout_marginRight="76dp"
                    android:text="@string/stats_penalties" />

                <!--
                     ImageButton
                    android:id="@+id/home_redcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/penalties"
                    android:background="#FFFFFF"
                    android:src="@drawable/red_card"
                    android:text="@string/stats_homeRedCard" /
                -->

                <Button
                    android:id="@+id/home_redcard"
                    android:layout_width="22dp"
                    android:layout_height="33dp"
                    android:layout_toLeftOf="@+id/penalties"
                    android:background="@drawable/redcard_btn"
                    android:inputType="number"
                    android:text="@string/stats_homeRedCard" />

                <Button
                    android:id="@+id/home_yellowcard"
                    android:layout_width="22dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toLeftOf="@+id/home_redcard"
                    android:background="@drawable/yellowcard_btn"
                    android:inputType="number"
                    android:text="@string/stats_homeYellowCard" />

                <ImageButton
                    android:id="@+id/home_refresh"
                   android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/home_yellowcard"
                    android:background="#FFFFFF"
                    android:src="@drawable/refresh"
                    android:text="@string/stats_homerefresh" />

                <ImageButton
                    android:id="@+id/away_refresh"
                    android:tag="imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/penalties"
                    android:background="#FFFFFF"
                    android:src="@drawable/refresh"
                    android:text="@string/stats_awayrefresh" />

                <!--  
                <ImageButton
                    android:id="@+id/away_yellowcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_toRightOf="@+id/away_refresh"
                    android:background="#FFFFFF"
                    android:src="@drawable/yellow_card"
                    android:text="@string/stats_awayYellowCard" />

                <ImageButton
                    android:id="@+id/away_redcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/away_yellowcard"
                    android:background="#FFFFFF"
                    android:src="@drawable/red_card"
                    android:text="@string/stats_awayRedCard" />
                -->
                <Button
                    android:id="@+id/away_redcard"
                    android:layout_width="22dp"
                    android:layout_height="33dp"
                    android:layout_toRightOf="@+id/away_refresh"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/redcard_btn"
                    android:inputType="number"
                    android:text="@string/stats_awayRedCard" />

                <Button
                    android:id="@+id/away_yellowcard"
                    android:layout_width="22dp"
                    android:layout_height="33dp"
                    android:layout_toRightOf="@+id/away_redcard"
                    android:background="@drawable/yellowcard_btn"
                    android:inputType="number"
                    android:text="@string/stats_awayYellowCard" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>